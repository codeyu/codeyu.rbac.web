@model IEnumerable<Rbac.Entity.DataBaseField>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>表字段列表</title>
    <link href="~/media/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/media/themes/blue/default.css" rel="stylesheet" />
    <link href="~/media/themes/blue/table.css" rel="stylesheet" />
    <script src="~/media/jquery/jquery.min.js"></script>
    <script src="~/media/jquery/jquery.form.js"></script>
    <script src="~/media/jquery/jquery.cookie.js"></script>
    <script src="~/media/jquery/jquery.scrollUp.min.js"></script>
    <script src="~/media/jquery/jquery.placeholder.min.js"></script>
    <script src="~/media/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/media/js/common.js"></script>
</head>
<body style="margin:0px;padding:0px">
    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="javascript:createCode()">后台代码生成</a>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 8%; ">序号</th>
                <th style="width: 15%; ">字段名</th>
                <th style="width: 15%; ">字段类型</th>
                <th style="width: 15%; ">字段长度</th>
                <th style="width: 8%; ">主键</th>
                <th style="width: 8%; ">可空</th>
                <th>字段说明</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var field in Model)
            {
                <tr>
                    <td>
                        @field.number
                    </td>
                    <td>
                        @field.column
                    </td>
                    <td>
                        @field.datatype
                    </td>
                    <td>
                        @field.length
                    </td>
                    <td>
                        @field.key
                    </td>
                    <td>
                        @field.isnullable
                    </td>
                    <td>
                        @field.remark
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count() == 0)
    {
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            对不起，没有找到相匹配的记录
        </div>
    }
    @Html.Raw(ViewBag.Pager)
    <script src="~/media/js/generator/generator.js"></script>
</body>
</html>
