    <thead>
        <tr>
            <th style="width: 20%">系统编码</th>
            <th style="width: 20%">参数值</th>
            <th>备注说明</th>
            <th style="width: 10%">是否可编辑</th>
            <th style="width: 8%">排序值</th>
            <th style="width: 8%">操作</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
