@model Murphy.Entity.BaseLog
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>操作日志明细</title>
    <link href="~/media/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        * {
            background-color: #FFFFFF;
            color: #000;
            font-family: Tahoma,"微软雅黑", "宋体";
            font-size: 14px;
            line-height: 1.6;
        }
    </style>
</head>
<body style="margin:0px;margin:0px">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table">
        <tbody>
            <tr>
                <td width="140">操作账号：</td>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <td>操作人：</td>
                <td>@Model.RealName</td>
            </tr>
            <tr>
                <td>位置：</td>
                <td>@Model.NavigationUrl</td>
            </tr>
            <tr>
                <td>类型：</td>
                <td>@Model.TypeName</td>
            </tr>
            <tr>
                <td>日期：</td>
                <td>@Model.Date</td>
            </tr>
            <tr>
                <td>客户端IP：</td>
                <td>@Model.IPAddress</td>
            </tr>

            @if (Model.Type == 2)
            {
                <tr>
                    <td>修改前：</td>
                    <td><pre class="pre-scrollable">@Model.OldXml</pre></td>
                </tr>
                <tr>
                    <td>修改后：</td>
               
                    <td><pre class="pre-scrollable">@Model.NewXml</pre></td>
                </tr>
            }
            else
            {
                <tr>
                    <td>备注说明：</td>
                    <td><pre style="word-break:break-all; font-family:'Courier New'; white-space:pre-wrap;">@Model.Description</pre></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
