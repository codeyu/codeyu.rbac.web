                <button class="Browser" type="button" id="selectModulePermissionUser"></button>
                <span id="ModulePermissionUserNameSpan"></span>
                <input type="hidden" id="ModulePermissionUserIdList" name="ModulePermissionUserIdList" value="" />
            </td>
            <td><a href="#" murphybuttonname="BaseCache.Update" onclick="javascript: updateCache('ModulePermission', 'ModulePermissionUserIdList')">更新缓存</a></td>
        </tr>
    </tbody>
</table>
